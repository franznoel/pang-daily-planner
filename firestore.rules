rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User documents - allow users to access only their own data
    match /user/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Daily plans subcollection - user/{userId}/daily-plans/{date}
      match /daily-plans/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
